doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link( rel="stylesheet", href="/styles.css")
        title Mis películas
    body 
        main
            
            h1.title Mis películas
            button Crear nueva
            section.movies_container 
                each movie in movies
                    button Editar
                    button Eliminar
                    img(src=movie.image, alt="", srcset="")
                    h3 Title: #{movie.fullTitle}
                    p Director: #{movie.director} 
                    p Año de lanzamiento: #{movie.year} 
                    p Plot: #{movie.plot} 
                    p Duración: #{movie.runtimeStr} 
                    

