html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link( rel="stylesheet", href="/styles.css")
        title Mis películas
    body 
        main
            
            h1.title Editar películas
            
            section.form_container 
                form(action="")
                    input(type="text" id="edit_title" name="e_title" placeholder="Título:")
                    input(type="text" id="edit_dir" name="e_dir" placeholder="Director:")
                    input(type="text"  id="edit_plot" name="e_plot" placeholder="Sinopsis:")
                    input(type="text" id="edit_year" name="e_year" placeholder="Estreno (año):")
                    input(type="text" id="edit_run" name="e_run" placeholder="Duración:")
                    input(type="text" id="edit_img" name="e_img" placeholder="Imagen:")
                    input(type="submit", value="Editar")

